{
  "name": "tetralog",
  "description": "TetraLog blog made with HB Cards Theme",
  "author": "TetraTheta",
  "dependencies": {
    "@minify-html/node": "^0.15.0",
    "cheerio": "^1.0.0-rc.12",
    "minify-xml": "^4.4.1",
    "rimraf": "^5.0.7"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^6.0.0",
    "autoprefixer": "^10.4.19",
    "postcss-cli": "^11.0.0",
    "rtlcss": "^4.1.1"
  },
  "overrides": {
    "postcss-cli": {
      "braces": ">=3.0.3"
    }
  },
  "scripts": {
    "build": "hugo --gc --minify -e production",
    "check-update": "npx --yes npm-check-updates",
    "clean": "rimraf public && rimraf resources",
    "deslash": "node ./.scripts/deslash.mjs",
    "dev": "hugo server --renderToMemory --disableFastRender -D -p 44",
    "dev.prod": "hugo server --gc --minify --renderToMemory --disableFastRender -D -e production -p 44",
    "new": "node ./.scripts/new.mjs",
    "publish": "node --env-file=./.scripts/.env ./.scripts/publish.mjs",
    "publish.local": "node --env-file=./.scripts/.env ./.scripts/publish.local.mjs"
  }
}
